{% extends "@EasyAdmin/page/content.html.twig" %} 

{% block body_javascript %}




<script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar-holder');
        var calendar = new FullCalendar.Calendar(calendarEl, {

          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
          },
          initialView: 'dayGridMonth',
          themeSystem: 'bootstrap5',
          editable: true,
          eventSources: [
                    {
                        url: "{{ path('fc_load_events') }}",
                        method: "POST",
                        extraParams: {
                            filters: JSON.stringify({})
                        },
                        failure: () => {
                             alert("There was an error while fetching FullCalendar!");
                        },
                    },
                ],
                timeZone: 'UTC',
        });
        calendar.render();
      });

    </script>









{% endblock %}

{% block content_title %}
<h1 class="title">Calendar</h1>
{% endblock %}

{% block main %}
<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-xl-3">
      <div class="card h-100">
        <div class="card-body">
          <a href="" type="button" class="btn btn-primary w-100">
            <span class="fa fa-calendar-plus-o">
            </span> Create new reservation</a>
          <div id="external-events">
            <br>
            <p class="text-muted">Drag and drop your event or click in the calendar</p>
            <div class="external-event fc-event rounded-2 border border-primary mb-2" data-class="bg-success">
              <i class="fa fa-circle me-2 p-2"></i>New Event Planning</div>
            <div class="external-event fc-event rounded-2 border border-secondary mb-2" data-class="bg-success">
              <i class="fa fa-circle me-2 p-2"></i>New Event Planning</div>
            <div class="external-event fc-event rounded-2 border border-success mb-2" data-class="bg-success">
              <i class="fa fa-circle me-2 p-2"></i>New Event Planning</div>
            <div class="external-event fc-event rounded-2 border border-danger mb-2" data-class="bg-success">
              <i class="fa fa-circle me-2 p-2"></i>New Event Planning</div>
          </div>
        </div>
      </div>
    </div>
    <!-- end col-->
    <div class="col-xl-9">
      <div class="card h-100">

        <div class="card-body p-3">
          <div id="calendar-holder"></div>
        </div>
      </div>
    </div>
    <!-- end col -->
  </div>
  <!-- end row-->






</div>
{% endblock %}

